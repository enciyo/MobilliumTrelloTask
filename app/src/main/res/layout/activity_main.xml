<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/frame">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                app:srcCompat="@drawable/framelayout_background"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"/>
        <TextView
                android:text="Frame Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textColor="@color/colorAccent"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="center|end"/>

    </FrameLayout>
    <TextView
            android:text="@string/gdg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/card"
            android:layout_below="@+id/lin"
            android:layout_margin="10dp"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3"
            android:divider="@android:drawable/divider_horizontal_textfield"
            android:foregroundGravity="center"
            android:id="@+id/lin"
            android:layout_margin="20dp"
            android:layout_below="@+id/frame">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:showDividers="middle|end"
                android:divider="@android:drawable/divider_horizontal_textfield">
            <TextView
                    android:text="Events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_margin="4dp"
                    android:textAlignment="center"/>
            <TextView
                    android:text="17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_margin="4dp"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@android:drawable/divider_horizontal_textfield"
                android:showDividers="middle|end">
            <TextView
                    android:text="Attandee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_margin="4dp"
                    android:textAlignment="center"/>
            <TextView
                    android:text="25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_margin="4dp"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@android:drawable/divider_horizontal_textfield"
                android:showDividers="middle|end"
                android:layout_alignEnd="@+id/lin">
            <TextView
                    android:text="Speakers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_margin="4dp"
                    android:textAlignment="center"/>
            <TextView
                    android:text="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_margin="4dp"
                    android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
            app:cardBackgroundColor="#aaaaa1"
            card_view:cardCornerRadius="22dp"
            card_view:cardPreventCornerOverlap="true"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card"
            android:layout_centerInParent="true"
            android:layout_marginTop="21dp"
            android:layout_marginStart="0dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="CardView-ConstraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>